{
  "name": "sm3000-config-app",
  "version": "1.0.0",
  "description": "SM3000 PLC Configuration Tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "SM3000",
  "license": "MIT",
  "build": {
    "appId": "com.sm3000.config",
    "productName": "SM3000 Configuration Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "app.js",
      "variables_structure.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "modbus-serial": "^8.0.23"
  },
  "devDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
